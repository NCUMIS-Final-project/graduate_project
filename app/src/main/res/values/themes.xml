<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Graduate_project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="graduate_btn">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/dark_blue</item>
    </style>

    <style name="graduate_topic">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
        <item name="fontFamily"></item>
    </style>

    <style name="graduate_text_shadow">
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="graduate_shadow">

    </style>

    <style name="graduate_topic2" parent="graduate_topic">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="text">
        <item name="android:textSize">16dp</item>
        <item name="android:textAppearance">@color/dark_blue</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="graduate_rectangle">
        <item name="cardCornerRadius">15dp</item>
        <item name="contentPadding">10dp</item>
    </style>
</resources>